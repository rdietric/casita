command -v uncrustify

if [ $? -gt 0 ]; then
    echo "uncrustify not found"
    exit 1
fi

EXTENSIONS="*.cpp *.hpp"

for EXT in $EXTENSIONS; do
    find . -name $EXT -exec echo -e "beautifying {}" \; -exec uncrustify -c doc/casita_uncrustify.cfg --replace --no-backup -q '{}' \;
done
